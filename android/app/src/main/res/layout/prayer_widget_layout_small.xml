<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_widget_rounded"
    android:padding="12dp">

    <!-- Header row: next prayer (name + time) + Hijri stack -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <!-- Next prayer column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/next_prayer_name_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="العشاء" />
            <TextView
                android:id="@+id/next_prayer_time_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#D0F0FF"
                android:textSize="13sp"
                android:text="م ٠٥:٥٩" />
        </LinearLayout>
        <!-- Hijri stack with fixed size to avoid zero measurement -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <FrameLayout
                android:id="@+id/hijri_stack_small"
                android:layout_width="72dp"
                android:layout_height="44dp">
                <ImageView
                    android:id="@+id/hijri_icon_small"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.18"
                    android:contentDescription="hijri icon" />
                <TextView
                    android:id="@+id/hijri_day_overlay_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="١" />
            </FrameLayout>
            <TextView
                android:id="@+id/hijri_year_weekday_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="4dp"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:text="١٤٤٦ السبت" />
        </LinearLayout>
    </LinearLayout>

    <!-- Row of prayers with times -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp">

        <LinearLayout
            android:id="@+id/pill_fajr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_pill_unselected"
            android:padding="8dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/fajr_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الفجر"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/fajr_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textColor="#D0F0FF"
                    android:textSize="11sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pill_dhuhr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_pill_unselected"
            android:padding="8dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/dhuhr_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الظهر"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/dhuhr_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textColor="#D0F0FF"
                    android:textSize="11sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pill_asr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_pill_unselected"
            android:padding="8dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/asr_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="العصر"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/asr_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textColor="#D0F0FF"
                    android:textSize="11sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pill_maghrib"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_pill_unselected"
            android:padding="8dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/maghrib_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="المغرب"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/maghrib_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textColor="#D0F0FF"
                    android:textSize="11sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pill_isha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_pill_unselected"
            android:padding="8dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/isha_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="العشاء"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/isha_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textColor="#D0F0FF"
                    android:textSize="11sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Remaining progress with chronometer overlay -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginTop="8dp">
        <ProgressBar
            android:id="@+id/progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progress="100"
            android:progressDrawable="@drawable/progress_bar_remaining" />
        <Chronometer
            android:id="@+id/countdown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="monospace" />
    </FrameLayout>

    <TextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="#C8D6DF"
        android:textSize="11sp"
        android:paddingTop="6dp"
        android:text="أقم - مكتبة الحكمة" />

</LinearLayout>
