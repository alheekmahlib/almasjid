<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_widget_rounded"
    android:padding="14dp">

    <!-- Top row: next prayer (name + time) and Hijri info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/next_prayer_name_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="العشاء" />
            <TextView
                android:id="@+id/next_prayer_time_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#D0F0FF"
                android:textSize="14sp"
                android:text="م ٠٥:٥٩" />
        </LinearLayout>

        <!-- Stack: Hijri month watermark + day number overlay -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <FrameLayout
                android:id="@+id/hijri_stack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/hijri_icon"
                    android:layout_width="96dp"
                    android:layout_height="54dp"
                    android:alpha="0.18"
                    android:contentDescription="hijri icon" />
                <TextView
                    android:id="@+id/hijri_day_overlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:text="١" />
            </FrameLayout>
            <TextView
                android:id="@+id/hijri_year_weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:text="١٤٤٦ الجمعة" />
        </LinearLayout>
    </LinearLayout>

    <!-- Removed now_time per request -->

    <!-- Remaining time progress with chronometer overlay -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="6dp">
        <ProgressBar
            android:id="@+id/progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progress="100"
            android:progressDrawable="@drawable/progress_bar_remaining" />
        <Chronometer
            android:id="@+id/countdown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="monospace" />
    </FrameLayout>

    <!-- Grid of times: two columns -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/row_fajr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:padding="8dp"
                android:background="@drawable/bg_pill_unselected">
                <ImageView
                    android:id="@+id/fajr_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_moon" />
                <TextView
                    android:id="@+id/fajr_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="الفجر"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/fajr_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="٠٦:١٧"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_dhuhr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:padding="8dp"
                android:background="@drawable/bg_pill_unselected">
                <ImageView
                    android:id="@+id/dhuhr_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_sun" />
                <TextView
                    android:id="@+id/dhuhr_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="الظهر"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/dhuhr_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="١٢:٠٩"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_maghrib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:padding="8dp"
                android:background="@drawable/bg_pill_unselected">
                <ImageView
                    android:id="@+id/maghrib_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_moon" />
                <TextView
                    android:id="@+id/maghrib_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="المغرب"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/maghrib_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="٠٤:٢٩"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/row_sunrise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:padding="8dp"
                android:background="@drawable/bg_pill_unselected">
                <ImageView
                    android:id="@+id/sunrise_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_sun" />
                <TextView
                    android:id="@+id/sunrise_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="الشروق"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/sunrise_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="٠٧:٤٧"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_asr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:padding="8dp"
                android:background="@drawable/bg_pill_unselected">
                <ImageView
                    android:id="@+id/asr_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_sun" />
                <TextView
                    android:id="@+id/asr_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="العصر"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/asr_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="٠٢:١٢"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_isha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:padding="8dp"
                android:background="@drawable/bg_pill_unselected">
                <ImageView
                    android:id="@+id/isha_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_moon" />
                <TextView
                    android:id="@+id/isha_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="العشاء"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/isha_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="٠٥:٥٩"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Removed separate next prayer pill; next is highlighted within rows -->

    <!-- Extra lines -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">
        <TextView
            android:id="@+id/midnight_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="منتصف الليل"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/midnight_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="١٢:٠٠"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp">
        <TextView
            android:id="@+id/last_third_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ثلث الليل الأخير"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/last_third_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="٠٢:١٢"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="#C8D6DF"
        android:textSize="11sp"
        android:paddingTop="8dp"
        android:text="أقم - مكتبة الحكمة" />
</LinearLayout>
